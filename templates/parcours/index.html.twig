{% extends 'base.html.twig' %}

{% block title %}Création d'un parcours | Lightmap{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="{{ asset('assets/images/logo1.png') }}" alt="logo de lightmap"/>
                <h3 class="textH3">LightMap</h3>
                <p>Création d'un nouveau parcours.</p>
            </div>
            <div class="col-md-9 register-right">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Bonjour</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Création d'un nouveau parcours:</h3>
                        <div class="row register-form">
                            <div class="col-md-6 col-xl-10">
                                <div class="form-group">
                                    {{ form_label(form.nomParcours) }}
                                    {{ form_widget(form.nomParcours) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.nomEntreprise) }}
                                    {{ form_widget(form.nomEntreprise) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.numeroSiret) }}
                                    {{ form_widget(form.numeroSiret) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.nomApprenant) }}
                                    {{ form_widget(form.nomApprenant) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.prenomApprenant) }}
                                    {{ form_widget(form.prenomApprenant) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.posteOccupe) }}
                                    {{ form_widget(form.posteOccupe) }}
                                </div>
                                <div class="mt-3 text-center">
                                    <input type="submit" class="btn btn-success"  value="Validation du parcours"/>
                                </div>

                            </div>



                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    </div>
    {{ form_end(form)}}
{% endblock %}
